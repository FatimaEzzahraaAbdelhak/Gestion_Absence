<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eajy.materialdesigndemo.activity.DemmandAbsences"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardElevation="@dimen/card_recycler_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/text_margin"

            >

            <TextView
                android:id="@+id/tv_recycler_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom et Prenom"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_recycler_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recycler_item_2"
                android:layout_marginTop="@dimen/text_margin_very_small"
                android:text="Date"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_recycler_item_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_recycler_item_3"
                android:layout_marginTop="4dp"
                android:text="Etat"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_recycler_item_2"
                android:text="python" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="26dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tv_recycler_item_3"
                android:text="justifiÃ©" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginStart="28dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tv_recycler_item_3"
                android:text="10/04/2020" />

            <android.support.design.button.MaterialButton
                android:layout_width="159dp"
                android:layout_height="52dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:paddingLeft="44dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="Consulter"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="37dp"
        android:onClick="form_add_abs"
        android:src="@drawable/ic_add_white_24dp"
        app:layout_behavior="com.eajy.materialdesigndemo.view.FabBehavior"
        />


</RelativeLayout>