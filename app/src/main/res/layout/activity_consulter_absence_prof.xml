<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eajy.materialdesigndemo.activity.ConsulterAbsenceProf">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardElevation="@dimen/card_recycler_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/text_margin"

            >

            <TextView
                android:id="@+id/tv_recycler_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:text="Nom/Prénom"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_recycler_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recycler_item_2"
                android:layout_marginTop="9dp"
                android:text="Nombre d'absence :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="63dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/tv_recycler_item_2"
                android:text="Hamid Zahi" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginStart="25dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/tv_recycler_item_3"
                android:text="2 séances" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>